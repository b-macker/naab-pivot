// modules/report_generator.naab - Multi-format report generation
// Generates reports in JSON, HTML, CSV, SARIF, and Markdown formats

use io
use json
use file
use string
use time

export fn generate_report(results, format, output_path) {
    io.write("  [REPORT] Generating ", format, " report: ", output_path, "\n")

    if format == "json" {
        return generate_json_report(results, output_path)
    } else if format == "html" {
        return generate_html_report(results, output_path)
    } else if format == "csv" {
        return generate_csv_report(results, output_path)
    } else if format == "sarif" {
        return generate_sarif_report(results, output_path)
    } else if format == "markdown" || format == "md" {
        return generate_markdown_report(results, output_path)
    } else {
        io.write("  âš  Unknown format: ", format, ", using JSON\n")
        return generate_json_report(results, output_path)
    }
}

fn generate_json_report(results, output_path) {
    // Simple JSON output
    let report = {
        "timestamp": time.now(),
        "format": "json",
        "results": results
    }

    file.write(output_path, json.stringify(report, true))

    io.write("  âœ“ JSON report saved: ", output_path, "\n")
    return {"status": "SUCCESS", "path": output_path}
}

