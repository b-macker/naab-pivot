fn generate_csv_report(results, output_path) {
    // Generate CSV report
    let csv = "Name,Target,Status,Profile,Source,Binary\n"

    let vessels = results["vessels"] || []

    for vessel in vessels {
        let name = vessel["name"] || ""
        let target = vessel["target"] || ""
        let status = vessel["status"] || ""
        let profile = vessel["profile"] || ""
        let src = vessel["src"] || ""
        let bin = vessel["bin"] || ""

        csv = csv + name + "," + target + "," + status + "," + profile + "," + src + "," + bin + "\n"
    }

    file.write(output_path, csv)

    io.write("  âœ“ CSV report saved: ", output_path, "\n")
    return {"status": "SUCCESS", "path": output_path}
}

fn generate_sarif_report(results, output_path) {
    // Generate SARIF format for GitHub Code Scanning
    let sarif = {
        "version": "2.1.0",
        "$schema": "https://raw.githubusercontent.com/oasis-tcs/sarif-spec/master/Schemata/sarif-schema-2.1.0.json",
        "runs": [{
            "tool": {
                "driver": {
                    "name": "NAAb Pivot",
                    "version": "1.0.0",
                    "informationUri": "https://github.com/b-macker/naab-pivot"
                }
            },
            "results": []
        }]
    }

    file.write(output_path, json.stringify(sarif, true))

    io.write("  âœ“ SARIF report saved: ", output_path, "\n")
    return {"status": "SUCCESS", "path": output_path}
}

fn generate_markdown_report(results, output_path) {
    // Generate Markdown report
    let md = "# NAAb Pivot - Evolution Report\n\n"
    md = md + "Generated: " + time.now() + "\n\n"
    md = md + "## Summary\n\n"

    let vessels = results["vessels"] || []
    let total = array.length(vessels)
    let compiled = count_status(vessels, "COMPILED")
    let cached = count_status(vessels, "CACHED")
    let failed = count_status(vessels, "FAILED")

    md = md + "| Metric | Count |\n"
    md = md + "|--------|-------|\n"
    md = md + "| Total Vessels | " + total + " |\n"
    md = md + "| Compiled | " + compiled + " |\n"
    md = md + "| Cached | " + cached + " |\n"
    md = md + "| Failed | " + failed + " |\n\n"

    md = md + "## Vessels\n\n"
    md = md + "| Name | Target | Status | Profile |\n"
    md = md + "|------|--------|--------|--------|\n"

    for vessel in vessels {
        let name = vessel["name"] || "N/A"
        let target = vessel["target"] || "N/A"
        let status = vessel["status"] || "N/A"
        let profile = vessel["profile"] || "N/A"

        md = md + "| " + name + " | " + target + " | " + status + " | " + profile + " |\n"
    }

    md = md + "\n---\n\n"
    md = md + "*Generated by [NAAb Pivot](https://github.com/b-macker/naab-pivot)*\n"

    file.write(output_path, md)

    io.write("  âœ“ Markdown report saved: ", output_path, "\n")
    return {"status": "SUCCESS", "path": output_path}
}

fn count_status(vessels, target_status) {
    let count = 0

    for vessel in vessels {
        if vessel["status"] == target_status {
            count = count + 1
        }
    }

    return count
}
